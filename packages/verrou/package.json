{
  "name": "@verrou/core",
  "type": "module",
  "version": "0.3.0",
  "description": "",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "ISC",
  "keywords": [],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types/main.js",
    "./drivers/*": "./build/src/drivers/*.js",
    "./test_suite": "./build/src/test_suite.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "clean": "del-cli build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "quick:test": "cross-env NODE_NO_WARNINGS=1 node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "pretest": "pnpm lint",
    "test": "c8 pnpm quick:test",
    "build": "tsup-node",
    "release": "pnpm build && pnpm release-it",
    "version": "pnpm build",
    "prepublishOnly": "pnpm build",
    "checks": "pnpm lint && pnpm typecheck"
  },
  "peerDependencies": {
    "@aws-sdk/client-dynamodb": "^3.484.0",
    "ioredis": "^5.3.2"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-dynamodb": {
      "optional": true
    },
    "ioredis": {
      "optional": true
    }
  },
  "dependencies": {
    "@lukeed/ms": "^2.0.2",
    "@poppinss/utils": "^6.7.2",
    "async-mutex": "^0.4.1",
    "typescript-log": "^2.0.0"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.529.1",
    "@japa/expect-type": "2.0.1",
    "@types/better-sqlite3": "^7.6.9",
    "@types/pg": "^8.11.2",
    "@types/proper-lockfile": "^4.1.4",
    "better-sqlite3": "^9.4.3",
    "ioredis": "^5.3.2",
    "knex": "^3.1.0",
    "kysely": "^0.27.3",
    "mysql2": "^3.9.2",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.7"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): verrou@${version}",
      "tagAnnotation": "release ${version}",
      "tagName": "verrou@${version}"
    },
    "github": {
      "release": true,
      "releaseName": "verrou@${version}",
      "web": true
    }
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/drivers/*.ts",
      "./src/types/main.ts",
      "./src/test_suite.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "bin",
      "tests/**",
      "test_helpers/**",
      "factories/**"
    ]
  }
}
